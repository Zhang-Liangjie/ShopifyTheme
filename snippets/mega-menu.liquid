{% if block_style == "style_4" %}
<div class="container">
  <div class="row">
    
    <div class="col-12 {% if banner_first_style != blank or banner_second_style != blank or banner_third_style != blank %}col-xl-7{% else %}col-xl-12{% endif %}">
          <div class="row" data-masonry='{ "itemSelector": "[data-gridItem]", "columnWidth": ".grid-sizer" }'>
              <div class="grid-sizer"></div>

              {% for l in linklists[link_child].links %}
              <div data-gridItem class="menu-lv-2 inner{% if linklists[link_child] != empty %} dropdown{% endif %} col-12 {% if banner_first_style != blank or banner_second_style != blank or banner_third_style != blank %}col-xl-4{% else %}col5{% endif %}">
                  <!-- Menu level 2 -->
                  <a {%if linklists[link_child] != empty %}class="menu__moblie {% unless linklists[l.handle] != empty %}full-text{% endunless %}"{% endif %} href="{{ l.url }}" class="current">
                      {% render 'multilang' with l.title %}

                      {% if linklists[l.handle] != empty %}
                      <span class="icon-dropdown" data-toggle-menu-mb>
                          <i class="fa fa-angle-right" aria-hidden="true"></i>
                      </span>
                      {% endif %}
                  </a>

                  {% if linklists[l.handle] != empty %}
                  <div class="sub-menu-mobile menu-mb-translate">
                      <div class="menu-mb-title">
                          <span class="icon-dropdown">
                          <i class="fa fa-angle-left" aria-hidden="true"></i>
                          </span>
                          {% render 'multilang' with l.title %}
                      </div>

                      <ul class="site-nav-dropdown">
                          {% for child_l in linklists[l.handle].links %}
                          <!-- Menu level 3 -->
                          <li class="menu-lv-3">
                          <a href="{{ child_l.url }}" {% if child_l.active %}class="current"{% endif %}>
                              {% render 'multilang' with child_l.title %}
                          </a>
                          </li>
                          {% endfor %}
                      </ul>
                  </div>
                  {% endif %}
              </div>
              {% endfor %}
          </div>
      </div>

    {% if banner_first_style != blank or banner_second_style != blank or banner_third_style != blank %}
    <div class="col-12 col-xl-5">
        <div class="mega-banner">
            
            {% if banner_first_style != blank %}
            <div class="mega-col{% if banner_first_style != blank %} col-left{% endif %}">
                <a class="animate-scale" href="{{ link_banner_first_style }}" title="">
                    <img class="lazyload" data-srcset="{{ banner_first_style | img_url : '224x' }}" alt="" >
                </a>
            </div>
            {% endif %}

            {% if banner_second_style != blank or banner_third_style != blank %}
            <div class="mega-col{% if banner_second_style != blank or banner_third_style != blank %} col-right{% endif %}">
                {% if banner_second_style != blank %}
                <a class="animate-scale" href="{{ link_banner_second_style }}" title="">
                    <img class="lazyload" data-srcset="{{ banner_second_style | img_url : '224x' }}" alt="" >
                </a>
                {% endif %}

                {% if banner_third_style != blank %}
                <a class="animate-scale image-third" href="{{ link_banner_third_style }}" title="">
                    <img class="lazyload" data-srcset="{{ banner_third_style | img_url : '224x' }}" alt="" >
                </a>
                {% endif %}
            </div>
            {% endif %}

        </div>
    </div>
    {% endif %}

  </div>
</div>
{% endif %}