<div class="loading-modal modal"><div></div><div></div><div></div><div></div></div>

<div class="ajax-lookbook-modal">
    <div class="overlay"></div>
    <div class="ajax-modal-content">
        <a href="javascript:void(0)" data-close-lookbook-modal class="close close-modal">
        {% render 'icon-close' %}
        </a>
        <div class="lookbook-content"></div>
    </div>  
</div>

<div class="ajax-error-modal modal">
    <div class="modal-inner">
        <div class="ajax-error-message"></div>
    </div>
</div>

{% if settings.enable_compare_product %}
<div class="ajax-success-modal halo-modal ajax-compare" data-compare-modal>
    <div class="modal-overlay">
        <div class="halo-modal-content">
            <a href="javascript:void(0)" class="close close-modal" title="{{ 'cart.ajax_cart.close' | t }}">
                {% render 'icon-close' %}
            </a>
            <div class="halo-modal-header">
                <span class="text">{{ 'compare.general.title' | t }}</span>
                <a href="javascript:void(0)" class="remove-all" title="{{ 'compare.general.remove_all' | t }}" data-compare-remove-all>
                    {{ 'compare.general.remove_all' | t }}
                </a>
            </div>
            <div class="halo-modal-body">
                <div class="compare-modal-wrapper">
                    <div class="product-row row t-product">
                        <div class="compare-header col-6 col-md-2 col-lg-2">{{ 'compare.general.product' | t }}</div>
                        <div class="compare-content col-6 col-md-10 col-lg-10">
                            <div class="product-grid grid"></div>
                        </div>
                    </div>

                    {% if settings.enable_compare_rating %}
                    <div class="product-row row t-rating">
                        <div class="compare-header col-6 col-md-2 col-lg-2">{{ 'compare.general.review' | t }}</div>
                        <div class="compare-content col-6 col-md-10 col-lg-10">
                            <div class="rating grid">
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    {% if settings.enable_compare_description %}
                    <div class="product-row row t-description">
                        <div class="compare-header col-6 col-md-2 col-lg-2">{{ 'compare.general.description' | t }}</div>
                        <div class="compare-content col-6 col-md-10 col-lg-10">
                            <div class="description grid"></div>
                        </div>
                    </div>
                    {% endif %}

                    {% if settings.enable_compare_availability %}
                    <div class="product-row row t-availability">
                        <div class="compare-header col-6 col-md-2 col-lg-2">{{ 'compare.general.availability' | t }}</div>
                        <div class="compare-content col-6 col-md-10 col-lg-10">
                            <div class="availability grid"></div>
                        </div>
                    </div>
                    {% endif %}

                    {% if settings.enable_compare_product_type %}
                    <div class="product-row row t-product-type">
                        <div class="compare-header col-6 col-md-2 col-lg-2">{{ 'compare.general.product_type' | t }}</div>
                        <div class="compare-content col-6 col-md-10 col-lg-10">
                            <div class="product-type grid"></div>
                        </div>
                    </div>
                    {% endif %}

                    {% if settings.enable_compare_sku %}
                    <div class="product-row row t-product-sku">
                        <div class="compare-header col-6 col-md-2 col-lg-2">{{ 'compare.general.sku' | t }}</div>
                        <div class="compare-content col-6 col-md-10 col-lg-10">
                            <div class="product-sku grid"></div>
                        </div>
                    </div>
                    {% endif %}

                    {% if settings.enable_compare_size %}
                    <div class="product-row row t-product-size">
                        <div class="compare-header col-6 col-md-2 col-lg-2">{{ 'compare.general.size' | t }}</div>
                        <div class="compare-content col-6 col-md-10 col-lg-10">
                            <div class="option1 grid"></div>
                        </div>
                    </div>
                    {% endif %}

                    {% if settings.enable_compare_color %}
                    <div class="product-row row t-product-color">
                        <div class="compare-header col-6 col-md-2 col-lg-2">{{ 'compare.general.color' | t }}</div>
                        <div class="compare-content col-6 col-md-10 col-lg-10">
                            <div class="option2 grid"></div>
                        </div>
                    </div>
                    {% endif %}

                    {% if settings.enable_compare_option %}
                    <div class="product-row row t-product-option">
                        <div class="compare-header col-6 col-md-2 col-lg-2">{{ 'compare.general.option' | t }}</div>
                        <div class="compare-content col-6 col-md-10 col-lg-10">
                            <div class="option3 grid"></div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>     
    </div>
</div>
<div class="compare-message-modal halo-modal" data-compare-message-modal>
    <div class="modal-overlay">
         <div class="halo-modal-content">
              <a class="close close-modal" title="{{ 'cart.ajax_cart.close' | t }}">
                {% render 'icon-close' %}
            </a>
            <div class="halo-modal-body"></div>
         </div>
    </div>
</div>
{% endif %}

{% if settings.enable_quick_view %}
<div class="ajax-success-modal halo-modal ajax-quickview" data-quickview-modal>
    <div class="modal-overlay">
        <div class="halo-modal-content">
            <a class="close close-modal" title="{{ 'cart.ajax_cart.close' | t }}">
                {% render 'icon-close' %}
            </a>
            
            <div class="halo-modal-body"></div>
        </div>     
    </div>
</div>
{% endif %}

<div class="newsletter-success-modal">
    <div class="modal-overlay"></div>
        <div class="halo-modal-content">
            <a class="close close-modal" title="{{ 'cart.ajax_cart.close' | t }}">
                {% render 'icon-close' %}
            </a>
            
            <div class="halo-modal-body">
                <div class="success">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    <span>{{settings.newssletter_success_text}}</span>
                </div>
                <div class="error" style="display: none;">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    <span>{{settings.newssletter_error_text}}</span>
                </div>
            </div>
        </div>     
</div>

<div class="ajax-success-modal add-ajax-success-modal modal" data-ajax-cart-success>
  <div class="modal-overlay"></div>
    <div class="halo-modal-body">
      <div class="cart-modal-content">
            <div class="item">
                <div class="ajax-left">
                  <img class="ajax-product-image" alt="&nbsp;" src=""/>
                </div>
                <div class="ajax-right">
                  <div class="ajax-product-title"></div>
                  <p class="size_option"></p>
                  <p class="success-message message-added-cart" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.success_text"{% endif %}>
                    {{ 'cart.ajax_cart.success_text' | t }}
                  </p>
                  <div class="actions">
                    <button class="btn continue-shopping" onclick="javascript:void(0)" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.continue_shopping"{% endif %}><span>{{ 'cart.ajax_cart.continue_shopping' | t }}</span><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 17 33" xml:space="preserve"><g id="e4eb89a6-f885-43b8-9259-0d6b1516fab0"><g id="_x38_e584754-6657-46f1-a9d8-2cfd6623b552"><g><polygon points="14.9,14.5 0,0 0,3.7 11.1,14.5 13.2,16.5 11.1,18.5 0,29.3 0,33 14.9,18.5 17,16.5 "></polygon></g></g></g></svg></button>
                    <button class="btn btn-go-to-cart" onclick="window.location='{{ routes.cart_url }}'" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.go_to_cart"{% endif %}><span>{{ 'cart.ajax_cart.go_to_cart' | t }}</span><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 17 33" xml:space="preserve"><g id="e4eb89a6-f885-43b8-9259-0d6b1516fab0"><g id="_x38_e584754-6657-46f1-a9d8-2cfd6623b552"><g><polygon points="14.9,14.5 0,0 0,3.7 11.1,14.5 13.2,16.5 11.1,18.5 0,29.3 0,33 14.9,18.5 17,16.5 "></polygon></g></g></g></svg></button>
                  </div>
                </div>
                <a href="javascript:void(0)" class="close-modal close-modal-ajax close" title="{{ 'cart.ajax_cart.close' | t }}">
                  {% render 'icon-close' %}
                </a>
            </div>
      </div>
      <div class="ajax-bottom">
          <div class="actions">
            <button class="btn continue-shopping" onclick="javascript:void(0)" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.continue_shopping"{% endif %}><span>{{ 'cart.ajax_cart.continue_shopping' | t }}</span><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 17 33" xml:space="preserve"><g id="e4eb89a6-f885-43b8-9259-0d6b1516fab0"><g id="_x38_e584754-6657-46f1-a9d8-2cfd6623b552"><g><polygon points="14.9,14.5 0,0 0,3.7 11.1,14.5 13.2,16.5 11.1,18.5 0,29.3 0,33 14.9,18.5 17,16.5 "></polygon></g></g></g></svg></button>
            <button class="btn btn-go-to-cart" onclick="window.location='/cart'" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.go_to_cart"{% endif %}><span>{{ 'cart.ajax_cart.go_to_cart' | t }}</span><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" viewBox="0 0 17 33" xml:space="preserve"><g id="e4eb89a6-f885-43b8-9259-0d6b1516fab0"><g id="_x38_e584754-6657-46f1-a9d8-2cfd6623b552"><g><polygon points="14.9,14.5 0,0 0,3.7 11.1,14.5 13.2,16.5 11.1,18.5 0,29.3 0,33 14.9,18.5 17,16.5 "></polygon></g></g></g></svg></button>
          </div>
      </div>
    </div>


</div>