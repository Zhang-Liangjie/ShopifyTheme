{% if settings.display_popup_newsletter %}
<div class="wrapper-newsletter halo-modal" data-newsletter data-delay="{{settings.popup_newsletter_delay | times:1000}}">
    <div class="modal-overlay">
        <div class="halo-modal-content">
            <a class="close close-window" title="{{ 'cart.ajax_cart.close' | t }}">
                {% render 'icon-close' %}
            </a>
            
            <div class="halo-modal-body">
                <div class="content-image">
                    {%- assign img_url = settings.newsletter_image | img_url: '558x296' -%}
                    
                    {% if settings.newsletter_image != blank %}
                    <img data-src="https:{{ img_url }}" {% render 'lazy_load' %}>
                    {% else %}
                    <div class="not_img">
                        558 x 296px
                    </div>   
                    {% endif %}
                </div>
                
                <div class="content-bottom">
                    {% if settings.popup_newsletter_title != blank %}
                    <h2 class="title">
                        {% render 'multilang' with settings.popup_newsletter_title %}
                    </h2>
                    {% endif %}
                    
                    {% if settings.popup_newsletter_des != blank %}
                    <div class="des">
                        {% render 'multilang' with settings.popup_newsletter_des %}
                    </div>
                    {% endif %}
                    
                    <div id="mailchimp-email-subscibe" class="newsletter">
                        <div id="mc_embed_signup">
                            {% render 'newsletter-form' %}
                        </div>
                    </div>
                    
                    {% if settings.display_popup_social %}
                    <div class="icon-social">
                        {% render 'social-media' %}
                    </div>
                    {% endif %}
                    
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}